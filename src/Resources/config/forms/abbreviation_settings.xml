<?xml version="1.0" ?>
<form xmlns="http://schemas.sulu.io/template/template"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://schemas.sulu.io/template/template http://schemas.sulu.io/template/form-1.0.xsd"
>
    <key>abbreviation_settings</key>

    <schema>
        <allOf>
            <schema>
                <anyOf>
                    <schema>
                        <properties>
                            <property name="shadowOn" value="true" />
                            <property name="shadowBaseLanguage" mandatory="true" />
                        </properties>
                    </schema>
                    <schema>
                        <properties>
                            <property name="shadowOn" value="false" />
                        </properties>
                    </schema>
                </anyOf>
            </schema>
        </allOf>
    </schema>

    <properties>
        <property name="customizeWebspaceSettings" type="checkbox" visibleCondition="shadowOn == false">
            <meta>
                <title>sulu_abbreviations.webspace_settings</title>
            </meta>

            <params>
                <param name="label">
                    <meta>
                        <title>sulu_abbreviations.customize_webspace_settings</title>
                    </meta>
                </param>
                <param name="type" value="toggler"/>
            </params>
        </property>

        <property name="mainWebspace" type="single_select" colspan="6" spaceAfter="6" disabledCondition="!customizeWebspaceSettings" visibleCondition="shadowOn == false">
            <meta>
                <title>sulu_abbreviations.main_webspace</title>
            </meta>

            <params>
                <param
                        name="values"
                        type="expression"
                        value="service('sulu_abbreviations.webspace_selector').getValues()"
                />
            </params>
        </property>

        <property name="additionalWebspaces" type="select" colspan="6" spaceAfter="6" disabledCondition="!customizeWebspaceSettings" visibleCondition="shadowOn == false">
            <meta>
                <title>sulu_abbreviations.additional_webspace</title>
            </meta>

            <params>
                <param
                        name="values"
                        type="expression"
                        value="service('sulu_abbreviations.webspace_selector').getValues()"
                />
            </params>
        </property>

        <section name="changelog">
            <meta>
                <title>sulu_page.editing_information</title>
            </meta>
            <properties>
                <property name="authored" type="datetime" colspan="6">
                    <meta>
                        <title>sulu_page.authored_date</title>
                    </meta>
                </property>
                <property name="author" type="single_contact_selection" colspan="6">
                    <meta>
                        <title>sulu_page.author</title>
                    </meta>
                </property>
                <property name="changelog" type="changelog_line">
                    <meta>
                        <title>sulu_page.changelog</title>
                    </meta>
                </property>
            </properties>
        </section>
    </properties>
</form>
